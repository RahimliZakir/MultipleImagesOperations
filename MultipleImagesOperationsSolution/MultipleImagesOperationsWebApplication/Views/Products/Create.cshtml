@model MultipleImagesOperationsWebApplication.Models.Entity.Product

@{
    ViewData["Title"] = "Create";
}

@section css{
    <style>
        body {
            overflow-x: hidden;
        }

        h1, h4, #btn-div, #back-div {
            text-align: center;
        }

        #back-div {
            margin-top: 20px;
        }
    </style>
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="offset-3 col-md-6 px-5">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div style="width: 600px;" class="imager-container" id="viewer1" name="files"></div>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group" id="btn-div">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div id="back-div">
    <a asp-action="Index">Back to List</a>
</div>

@section scripts {
<script>
    $('#viewer1').imgadd({
        tnWidth: '120px',
        tnHeight: '120px',
        fontSize: '55px',
        plusInnerHtml: '',
        plusBtnClass: undefined
    });
</script>
}